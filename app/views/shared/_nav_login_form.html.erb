<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-inline'}) do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "input-small" %>    
  <%= f.password_field :password, :placeholder => "Password", :class => "input-small" %>
  <%= f.submit "Sign in", class: 'btn' %>
<% end %>